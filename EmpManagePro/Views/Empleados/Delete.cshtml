@model EmpManagePro.Models.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado"; // Configuro el título de la página
}

<h2>@ViewData["Title"]</h2>

<h3>¿Estás seguro de que deseas eliminar este empleado?</h3>

<div>
    <h4>@Model.Nombre</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>ID del Empleado</dt>
        <dd>@Model.EmpleadoID</dd>
        <dt>Nombre</dt>
        <dd>@Model.Nombre</dd>
        <dt>Email</dt>
        <dd>@Model.Email</dd>
        <dt>Teléfono</dt>
        <dd>@Model.Telefono</dd>
        <dt>Fecha de Contratación</dt>
        <dd>@Model.FechaContratacion.ToString("dd/MM/yyyy")</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Empleados", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.EmpleadoID" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a href="@Url.Action("Index", "Empleados")" class="btn btn-secondary">Cancelar</a>
    }
</div>
