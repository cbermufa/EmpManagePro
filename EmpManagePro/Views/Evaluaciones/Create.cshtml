@model EmpManagePro.Models.EvaluacionRendimiento

@{
    ViewBag.Title = "Crear Evaluación de Rendimiento";
}

<h2>Crear Evaluación de Rendimiento</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="EmpleadoID" class="control-label">Empleado</label>
        <select asp-for="EmpleadoID" class="form-control" asp-items="ViewBag.Empleados">
            <option value="">Seleccione un empleado</option>
        </select>
        <span asp-validation-for="EmpleadoID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Objetivos" class="control-label"></label>
        <textarea asp-for="Objetivos" class="form-control"></textarea>
        <span asp-validation-for="Objetivos" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Seguimiento" class="control-label"></label>
        <textarea asp-for="Seguimiento" class="form-control"></textarea>
        <span asp-validation-for="Seguimiento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Retroalimentacion" class="control-label"></label>
        <textarea asp-for="Retroalimentacion" class="form-control"></textarea>
        <span asp-validation-for="Retroalimentacion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaReunion" class="control-label"></label>
        <input asp-for="FechaReunion" class="form-control" type="date" />
        <span asp-validation-for="FechaReunion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Crear Evaluación" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
