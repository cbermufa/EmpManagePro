@model EmpManagePro.Models.Puesto

@{
    ViewData["Title"] = "Eliminar Puesto";
}

<h2>@ViewData["Title"]</h2>

<h3>¿Estás seguro que deseas eliminar este puesto?</h3>

<div>
    <h4>Puesto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Salario)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Salario)
        </dd>
    </dl>

    <form asp-action="DeletePuestoConfirmed">
        <input type="hidden" name="id" value="@Model.PuestoID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a href="@Url.Action("GestionarPuestos", "Nominas")" class="btn btn-default">Cancelar</a>
    </form>
</div>
