@model EmpManagePro.Models.Deduccion

@{
    ViewData["Title"] = "Editar Deducción";
}

<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm("EditDeduccion", "Nominas", FormMethod.Post, new { id = "formEditDeduccion", @class = "classFormEdits" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.DeduccionID)

    <div class="form-group">
        @Html.LabelFor(model => model.Nombre, "Nombre de la Deducción", new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", placeholder = "Ej. Seguridad Social" })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Porcentaje, "Porcentaje (%)", new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Porcentaje, new { @class = "form-control", type = "number", step = "0.01", placeholder = "Ej. 7" })
        @Html.ValidationMessageFor(model => model.Porcentaje, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
    </div>
}
